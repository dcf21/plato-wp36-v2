{
  "job_name": "hot_jupiter_vs_size_psls",
  "task_list": [
    {
      "task": "execution_for_loop",
      "name": "cadence",
      "values": [
        900,
        25
      ],
      "task_list": [
        {
          "task": "execution_for_loop",
          "name": "size",
          "log_range": [
            "0.01",
            "0.2",
            "30"
          ],
          "task_list": [
            {
              "task": "psls_synthesise",
              "outputs": {
                "lightcurve": "hjvsize_psls_${cadence_index}_${size_index}.gz"
              },
              "specs": {
                "duration": 90,
                "planet_radius": "${size}",
                "orbital_period": 4,
                "semi_major_axis": 0.05,
                "orbital_angle": 0,
                "sampling_cadence": "${cadence}"
              }
            },
            {
              "task": "verify",
              "inputs": {
                "lightcurve": "hjvsize_psls_${cadence_index}_${size_index}.gz"
              }
            },
            {
              "task": "transit_search",
              "inputs": {
                "lightcurve": "hjvsize_psls_${cadence_index}_${size_index}.gz"
              },
              "lc_duration": 90,
              "tda_name": "tls"
            }
          ]
        }
      ]
    }
  ]
}
