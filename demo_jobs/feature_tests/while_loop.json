{
  "job_name": "while_loop_test",
  "working_directory": "while_loop_test",
  "task_list": [
    {
      "task": "execution_for_loop",
      "parameter": "tda",
      "values": [
        "tls"
      ],
      "task_list": [
        {
          "task": "execution_for_loop",
          "parameter": "cadence",
          "values": [
            900
          ],
          "task_list": [
            {
              "task": "execution_for_loop",
              "parameter": "size",
              "log_range": [
                "(constants.Rearth / 8)",
                "(constants.Rearth * 8)",
                8
              ],
              "task_list": [
                {
                  "task": "synthesis_psls",
                  "name": "lightcurve_synthesis",
                  "outputs": {
                    "lightcurve": "'evsize_psls_{tda_index}_{cadence_index}_{size_index}.gz'.format(**metadata)"
                  },
                  "specs": {
                    "duration": 730,
                    "planet_radius": "(metadata['size'])",
                    "orbital_period": 240,
                    "semi_major_axis": 1,
                    "orbital_angle": 0,
                    "sampling_cadence": "(metadata['cadence'])"
                  }
                },
                {
                  "task": "execution_do_while_loop",
                  "iteration_name": "tda_loop",
                  "requires_metadata_from_child": [
                    "transit_detection"
                  ],
                  "repeat_criterion": "(transit_detection.outcome == 'PASSED') and (tda_loop_index < 3)",
                  "task_list": [
                    {
                      "task": "verify",
                      "name": "lightcurve_verification",
                      "inputs": {
                        "lightcurve": "'evsize_psls_{tda_index}_{cadence_index}_{size_index}.gz'.format(**metadata)"
                      }
                    },
                    {
                      "task": "'transit_search_{tda}'.format(**metadata)",
                      "name": "transit_detection",
                      "inputs": {
                        "lightcurve": "'evsize_psls_{tda_index}_{cadence_index}_{size_index}.gz'.format(**metadata)"
                      },
                      "outputs": {
                        "debugging": "'evsize_psls_{tda_index}_{cadence_index}_{size_index}.tar.gz'.format(**metadata)"
                      },
                      "lc_duration": 730
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
