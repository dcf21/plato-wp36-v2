{
  "job_name": "christiansen2016",
  "task_list": [
    {
      "task": "execution_for_loop",
      "name": "size",
      "linear_range": [
        "constants.Rearth*0.25",
        "constants.Rearth*2",
        "12"
      ],
      "task_list": [
        {
          "task": "execution_for_loop",
          "name": "period",
          "linear_range": [
            "0.5",
            "380",
            "12"
          ],
          "task_list": [
            {
              "task": "execution_for_loop",
              "name": "impact",
              "linear_range": [
                "0",
                "1",
                "6"
              ],
              "task_list": [
                {
                  "task": "psls_synthesise",
                  "outputs": {
                    "lightcurve": "christiansen_A_${size_index}_${period_index}_${impact_index}.gz"
                  },
                  "specs": {
                    "duration": 730,
                    "sampling_cadence": 600,
                    "enable_transits": 0
                  }
                },
                {
                  "task": "batman_synthesise",
                  "outputs": {
                    "lightcurve": "christiansen_B_${size_index}_${period_index}_${impact_index}.gz"
                  },
                  "specs": {
                    "duration": 730,
                    "planet_radius": "${size}",
                    "t0": "random.random() * 200",
                    "orbital_period": "${period}",
                    "impact_parameter": "${impact}",
                    "semi_major_axis": "pow(${period}/365.25, 2/3)",
                    "noise": 0,
                    "mes_assume_noise": "plato_noise",
                    "sampling_cadence": 600
                  }
                },
                {
                  "task": "multiplication",
                  "inputs": {
                    "lightcurve_1": "christiansen_A_${size_index}_${period_index}_${impact_index}.gz",
                    "lightcurve_2": "christiansen_B_${size_index}_${period_index}_${impact_index}.gz"
                  },
                  "outputs": {
                    "lightcurve": "christiansen_${size_index}_${period_index}_${impact_index}.gz"
                  }
                },
                {
                  "task": "verify",
                  "inputs": {
                    "lightcurve": "christiansen_${size_index}_${period_index}_${impact_index}.gz"
                  }
                },
                {
                  "task": "transit_search",
                  "inputs": {
                    "lightcurve": "christiansen_${size_index}_${period_index}_${impact_index}.gz"
                  },
                  "lc_duration": 730,
                  "tda_name": "tls"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}

