{
  "job_name": "tls_timing_full_span",
  "task_list": [
    {
      "task": "execution_for_loop",
      "name": "cadence",
      "values": [
        25,
        50,
        600
      ],
      "task_list": [
        {
          "task": "execution_for_loop",
          "name": "lc_length",
          "values": [
            "7 * constants.day",
            "10 * constants.day",
            "14 * constants.day",
            "21 * constants.day",
            "28 * constants.day",
            "1.5 * constants.month",
            "2 * constants.month",
            "2.5 * constants.month",
            "3 * constants.month",
            "4 * constants.month",
            "6 * constants.month",
            "9 * constants.month",
            "constants.year",
            "1.5 * constants.year",
            "2 * constants.year"
          ],
          "task_list": [
            {
              "task": "synthesise_psls",
              "outputs": {
                "lightcurve": "ttfs_${cadence_index}_${lc_length_index}.gz"
              },
              "specs": {
                "duration": "${lc_length}",
                "enable_transits": 0,
                "sampling_cadence": "${cadence}"
              }
            },
            {
              "task": "transit_search_tls",
              "inputs": {
                "lightcurve": "ttfs_${cadence_index}_${lc_length_index}.gz"
              },
              "lc_duration": "${lc_length}"
            }
          ]
        }
      ]
    }
  ]
}
